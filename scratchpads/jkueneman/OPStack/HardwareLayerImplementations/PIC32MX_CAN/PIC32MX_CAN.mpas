// ****************************************************************************
// function PIC32MX_StartTransmission: Boolean;
//
// Starts the transmission if there are no current transmits in procress
//
// ****************************************************************************
function PIC32MX_StartTransmission(Buffer: PNMRAnetCanBuffer; IsExtended: Boolean): Boolean;
begin
  Result := False;
  if Buffer <> nil then                                                         // If there is something to send then send it
  begin
    PIC32MX_CAN_Transmitting := True;
    PIC32MX_DMA_Style_Buffer(Buffer^, IsExtended, CAN_DIRECTION_WRITE, @TX_Main_RawBufferArray[CAN_TX_0_BUFFER].Word0);      // Convert it into a version that matches the registers
    PIC32MX_CAN_RequestTransmit(CAN_TX_0_BUFFER);                               // Set the Flag to start the transmission
    Result := True;
  end
end;

// ****************************************************************************
// procedure PIC32MX_StartCANHighPriorityMessageEngine;
//
// Starts the transmitter engine if there are no current transmits in procress
//
// THIS MUST ONLY BE CALLED IN THE CAN RECEIVE INTERRUPT >>>>>>>>>>>>>
//
// ****************************************************************************
procedure PIC32MX_StartCANHighPriorityMessageEngine(Buffer: PNMRAnetCanBuffer; IsExtended: Boolean);
begin
  if Buffer <> nil then
  begin
    PIC32MX_CAN_HighPriorityTransmitting := True;
    PIC32MX_DMA_Style_Buffer(Buffer^, IsExtended, CAN_DIRECTION_WRITE, @TX_Main_RawBufferArray[CAN_TX_1_BUFFER].Word0);      // Convert it into a version that matches the registers
    PIC32MX_CAN_RequestTransmit(CAN_TX_1_BUFFER);                             // Set the Flag to start the transmission
  end
end;

procedure CAN_2(); iv IVT_CAN_2; ilevel 7; ics ICS_SRS;
var
  IntCode: Word;
  Buffer: TNMRAnetCanBuffer;
  IsExtended: Boolean;
begin
  PIC32MX_CAN_GlobalInterruptFlagCAN_Event(True);                               // Reset the Global CAN Event Interrupt Flag
  IntCode := PIC32MX_CAN_InterruptCode;
  while IntCode <> ICODE_NO_INTERRUPT do                                        // Use the Interrupt Code to decode the Events that are both Enabled and Flags are set
  begin
    case IntCode of
      ICODE_TRB0 :                                                              // Tx Rx Buffer 0
      begin
        {$IFDEF TRACE_INTERRUPTS}UART1_Write_Text('TX0' +LF);{$ENDIF}
        PIC32MX_CAN_InterruptFlagTXBuffer(True);                                // TX Interrupt Flag Reset
        PIC32MX_CAN_Transmitting := False;
      end;
      ICODE_TRB1 :                                                              // Tx Rx Buffer 0
      begin
        {$IFDEF TRACE_INTERRUPTS}UART1_Write_Text('TX1' +LF);{$ENDIF}
        PIC32MX_CAN_InterruptFlagTXBuffer(True);                                // TX Interrupt Flag Reset
        PIC32MX_CAN_HighPriorityTransmitting := False;
      end;
      ICODE_TRB2 :                                                              // Tx Rx Buffer 0
      begin
        {$IFDEF TRACE_INTERRUPTS}UART1_Write_Text('RX2' +LF); {$ENDIF}
        IsExtended := True;
        PIC32MX_DMA_Style_Buffer(Buffer, IsExtended, CAN_DIRECTION_READ, @RX_Main_RawBufferArray[0].Word0);      // Convert it into a version that matches the registers
        case Hi(RX_Main_RawBufferArray[0].Word7) of
          0: ReceivedOnFilter0(@Buffer);
          1: ReceivedOnFilter1(@Buffer);
          2: ReceivedOnFilter2(@Buffer);
          3: ReceivedOnFilter3(@Buffer);
          4: ReceivedOnFilter4(@Buffer);
          5: ReceivedOnFilter5(@Buffer);
          6: ReceivedOnFilter6(@Buffer);
        end;
        PIC32MX_CAN_RX_Full(CAN_RX_0_BUFFER, True);                             // Reset the Full Flag

        if RBOVIF_bit = 1 then
        begin
          {$IFDEF TRACE_INTERRUPTS_OVERFLOW}UART1_Write_Text('CAN Overflow');{$ENDIF}
          RBOVIF_bit := 0;
        end;

        PIC32MX_CAN_InterruptFlagRXBuffer(True);                                // RX Interrupt Flag Reset
      end;
      ICODE_RX_OVERFLOW :
      begin
        {$IFDEF TRACE_INTERRUPTS_OVERFLOW}UART1_Write_Text('RxOVR'+LF);{$ENDIF}
        PIC32MX_CAN_InterruptFlagRXBufferOverflow(True);
      end else
      begin
        {$IFDEF TRACE_INTERRUPTS}UART1_Write_Text('9' +LF);{$ENDIF}
      end;
    end;
    IntCode := PIC32MX_CAN_InterruptCode;                                       // Get the next code (or no code) flag
  end;
end;

procedure PIC32MX_CAN_Initialize;
var
  i: Integer;
begin
  PIC32MX_CAN_Transmitting := False;
  PIC32MX_CAN_HighPriorityTransmitting := False;
  for i := 0 to MAX_ECAN_TX_BUFFER - 1 do
  begin
    TX_Main_RawBufferArray[i].Word0 := 0;                                                        // Allow the compiler to account for this ram
    TX_Main_RawBufferArray[i].Word1 := 0;
    TX_Main_RawBufferArray[i].Word2 := 0;
    TX_Main_RawBufferArray[i].Word3 := 0;
    TX_Main_RawBufferArray[i].Word4 := 0;
    TX_Main_RawBufferArray[i].Word5 := 0;
    TX_Main_RawBufferArray[i].Word6 := 0;
    TX_Main_RawBufferArray[i].Word7 := 0;
  end;
  for i := 0 to MAX_ECAN_RX_BUFFER - 1 do
  begin
    RX_Main_RawBufferArray[i].Word0 := 0;                                                        // Allow the compiler to account for this ram
    RX_Main_RawBufferArray[i].Word1 := 0;
    RX_Main_RawBufferArray[i].Word2 := 0;
    RX_Main_RawBufferArray[i].Word3 := 0;
    RX_Main_RawBufferArray[i].Word4 := 0;
    RX_Main_RawBufferArray[i].Word5 := 0;
    RX_Main_RawBufferArray[i].Word6 := 0;
    RX_Main_RawBufferArray[i].Word7 := 0;
  end;
end;

procedure PIC32MX_CAN_GlobalInterruptCAN_Event(Enable: Boolean);
begin   {
  if Enable then
    C1IE_bit := 1
  else
    C1IE_bit := 0;  }
end;


// *****************************************************************************
//  procedure PIC32MX_DMA_Style_Buffer
//     Parameters:
//
//     Returns: None
//
//     Description:   Fills the passed PCANRawBuffer with the more user friendly data
//                    the buffers are filled with copies of what the perphial registers need
//
//                     NOTE:  The datasheet for the dsPIC33FJ256GP710A is TOTALLY FREAKING WRONG
//                            in the Bit Pattern for the SID, EID, DLC words in the Buffers...
//
//
//                                     This is the correct bit pattern.
//  Datasheet defined SID - Word 0     |   U  |   U  |   U  |EID-17|EID-16|EID-15|EID-14|EID-13|EID-12|EID-11|EID-10|EID-9 |EID-8 |EID-7 |  SRR |  EID |
//  Datasheet defined EID - Word 1     |   U  |   U  |   U  |   U  |EID-6 |EID-5 |EID-4 |EID-3 |EID-2 |EID-1 |EID-0 |SID-10 |SID-9 |SID-8 |SID-7 |SID-6|
//  Datasheet defined EID - Word 2     |SID-5 |SID-4 |SID-3 |SID-2 |SID-1 |SID-0 |  RTR |  RB1 |   U  |   U  |   U  |   RB0 | DCL-3| DCL-2| DCL-1| DCL-0|
//
//  The example code for the ECAN shows in the comments what is in the datasheet
//  BUT.....  The code does exactly what I show above!!!!  Verified the datasheet is wrong
// *****************************************************************************
procedure PIC32MX_DMA_Style_Buffer(var Buffer: TNMRAnetCanBuffer; var IsExtended: Boolean; Direction: Byte; CANPtr: ^TFarWord);
begin
  if Direction = CAN_DIRECTION_WRITE then
  begin
    // Direction = 0 means Parameters to Buffer (Load TX Buffer)
    if IsExtended then
    begin
      CANPtr^ := DWORD(Buffer.MTI shr 16) and $1FFC;                             // Setup the Extended iD 7..17
      CANPtr^ := CANPtr^ or $0001;                                              // Setup if it is an extended ID
      Inc(CANPtr);                                                              // Move to the Extended ID
      CANPtr^ := DWORD(Buffer.MTI shr 6) and $0FFF;                              // put SID 0..6 into bits 5..11 and SID 6..10 in bits 0..4
      Inc(CANPtr);                                                              // Move to the DLC and the rest of the EID
      CANPtr^ := DWORD((Buffer.MTI shl 10) and $FC00);                           // Put SID 0..5 into bits 10..15
      CANPtr^ := CANPtr^ or (Word( Buffer.PayloadCount) and $000F);                // Put Data Length in the last 4 bits
    end else
    begin
      CANPtr^ := DWORD(Buffer.MTI shl 2) and $007FF;                             // SID
      Inc(CANPtr);                                                              // EID is not used
      CANPtr^ := Buffer.PayloadCount;                                              // EID/DLC does not use the EID bits
    end;
    Inc(CANPtr);                                                                // Move to Byte 1 and Byte 2
    CANPtr^ := Buffer.Payload[0] or (Buffer.Payload[1] shl 8);
    Inc(CANPtr);                                                                // Move to Byte 3 and Byte 4
    CANPtr^ := Buffer.Payload[2] or (Buffer.Payload[3] shl 8);
    Inc(CANPtr);                                                                // Move to Byte 5 and Byte 6
    CANPtr^ := Buffer.Payload[4] or (Buffer.Payload[5] shl 8);
    Inc(CANPtr);                                                                // Move to Byte 7 and Byte 8
    CANPtr^ := Buffer.Payload[6] or (Buffer.Payload[7] shl 8);
    Inc(CANPtr);
  end else
  begin
    // Direction <> 0 then Buffer to Parameters (Read RX Buffer)

    IsExtended := CANPtr^ and $0001 <> 0;
    if IsExtended then
    begin
      Buffer.MTI := CANPtr^ and $1FFC;
      Buffer.MTI := Buffer.MTI shl 16;
      Inc(CANPtr);                                                              // Word 1
      Buffer.MTI := Buffer.MTI or DWORD((CANPtr^ and $0FFF) shl 6);
      Inc(CANPtr);
      Buffer.MTI := Buffer.MTI or DWORD((CANPtr^ and $FC00) shr 10);               // Word 2
    end else
    begin
      Buffer.MTI := (CANPtr^ and $1FFC) shr 2;                                   // Word 0
      Inc(CANPtr);                                                              // Word 1
    end;
    Buffer.PayloadCount := CANPtr^ and $000F;                                      // Word 2
    Inc(CANPtr);                                                                // Move to C1RXnB1
    Buffer.Payload[0] := CANPtr^;
    Buffer.Payload[1] := CANPtr^ shr 8;
    Inc(CANPtr);                                                                // Move to C1RXnB2
    Buffer.Payload[2] := CANPtr^;
    Buffer.Payload[3] := CANPtr^ shr 8;
    Inc(CANPtr);                                                                // Move to C1RXnB3
    Buffer.Payload[4] := CANPtr^;
    Buffer.Payload[5] := CANPtr^ shr 8;
    Inc(CANPtr);                                                                // Move to C1RXnB4
    Buffer.Payload[6] := CANPtr^;
    Buffer.Payload[7] := CANPtr^ shr 8;
    Inc(CANPtr);                                                                // Move to C1RXnCON
  end
end;

