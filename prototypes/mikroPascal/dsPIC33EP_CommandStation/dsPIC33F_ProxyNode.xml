<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type='text/xsl' href='http://openlcb.org/trunk/prototypes/xml/xslt/cdi.xsl'?>
<cdi xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://openlcb.org/trunk/prototypes/xml/schema/cdi.xsd">
  <identification>
    <manufacturer>Mustangpeak</manufacturer>
    <model>PN100</model>
    <hardwareVersion>1.0</hardwareVersion>
    <softwareVersion>0.2</softwareVersion>
    <map>
      <relation>
        <property>Description</property>
        <value>Mustangpeak Train Proxy Node</value>
      </relation>
      <relation>
        <property>Status</property>
        <value>Prototype</value>
      </relation>
    </map>
  </identification>
  <acdi fixed="1" var="1" />
  <segment origin="0" space="253">
    <group offset="0">
      <name>User Data</name>
      <description>Add your own unique node info here</description>
      <string size="20">
        <name>User Name</name>
      </string>
      <string size="40">
        <name>User Description`</name>
      </string>
    </group>
  </segment>
  <segment origin="0" space="252">
    <group>
      <name>Manufacturer Information</name>
      <description>Manufacturer-provided fixed node description</description>
      <int size="1">
        <name>Version</name>
      </int>
      <string size="12">
        <name>Manufacturer Name</name>
      </string>
      <string size="6">
        <name>Manufacturer Info</name>
      </string>
      <string size="4">
        <name>Hardware Version</name>
      </string>
      <string size="4">
        <name>Software Version</name>
      </string>
    </group>
  </segment>
  <segment origin="0" space="251">
    <group offset="0">
      <name>User Data</name>
      <description>Add your own unique node info here</description>
      <int size="1">
        <name>Version</name>
      </int>
      <string size="20">
        <name>User Name</name>
      </string>
      <string size="40">
        <name>User Description</name>
      </string>
    </group>
  </segment>
  <segment origin="0" space="250">
    <group replication="9">
      <name>Node Effects Definition Information (NEDI)</name>
      <description>Describes Custom Effects for the Train</description>
      <repname>Effect</repname>
      <string size="16">
        <name>Effect Description</name>
        <description>Give the Effect a description to help identify it (0-16 chars)</description>
      </string>
      <string size="16">
        <name>Grouping Name</name>
        <description>Group related Effects by giving them the same Grouping Name (0-16 chars)</description>
      </string>
      <int size="1">
        <name>Latching</name>
        <description>The Effect remains in the enabled state for a predetermined time then toggles to the disabled state</description>
        <map>
          <relation>
            <property>1</property>
            <value>Latching is Enabled</value>
          </relation>
          <relation>
            <property>0</property>
            <value>Latching is Disabled</value>
          </relation>
        </map>
      </int>
      <int size="1">
        <name>Auto Toggle Time</name>
        <description>Seconds before toggling back to the "Disabled" state if not Latching (1-255)</description>
      </int>
    </group>
  </segment>
  <segment origin="0" space="249">
    <group replication="25">
      <name>Node Customization Definition Information (NCDI)</name>
      <description>Describes Customization for the Train and its operation</description>
      <repname>Customization</repname>
      <string size="16">
        <name>Customization Description</name>
        <description>Give the Customization a description to help identify it (0-16 chars)</description>
      </string>
      <string size="16">
        <name>Grouping Name</name>
        <description>Group related Customizations by giving them the same Grouping Name (0-16 chars)</description>
      </string>
      <int size="1">
        <name>Status</name>
        <description>The status of the Customization</description>
        <map>
          <relation>
            <property>0</property>
            <value>Value may not be in sync with the hardware</value>
          </relation>
          <relation>
            <property>1</property>
            <value>Value is known to be in sync with the hardware</value>
          </relation>
          <relation>
            <property>2</property>
            <value>Value needs to be commited to the hardware</value>
          </relation>
        </map>
      </int>
      <int size="1">
        <name>Value</name>
        <description>The value of the Customization</description>
      </int>
    </group>
  </segment>
</cdi>